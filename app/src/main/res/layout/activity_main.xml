<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:text="Weather Data"
        android:textColor="#FFFFFF"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:textSize="30sp" />

    <Button
        android:id="@+id/getCurrent"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:background="#9FDEE5"
        android:text="Current Weather" />

    <Button
        android:id="@+id/getForecast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/getCurrent"
        android:layout_alignEnd="@+id/getCurrent"
        android:layout_below="@+id/getCurrent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#9FDEE5"
        android:text="Forecast" />

    <Button
        android:id="@+id/getPast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/getCurrent"
        android:layout_alignEnd="@+id/getCurrent"
        android:layout_below="@+id/getForecast"
        android:layout_marginTop="20dp"
        android:background="#9FDEE5"
        android:text="Past Weather" />

    <TextView
        android:id="@+id/acknowledgements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textColor="#E0E0E0"
        android:text="Powered by Dark Sky" />


</RelativeLayout>